<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), users_path, :class => "nav-link active" %>
  </li>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to t(:new), new_user_path, :class => "nav-link" %>
      </li>
    <% end %>
  <% end %>
</ul>

<div class="tab-content">
  <div class="tab-pane active"><br/>
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>E-Mail</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to(image_tag(Gravatar.new(current_user.email).image_url, :size => "64x64"), user_path(user)) %></td>
          <td><%= link_to user.fullname, user_path(user) %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to t(:edit), edit_user_path(user), :class => 'btn btn-mini btn-success' %>
            <%= link_to t(:destroy), user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
