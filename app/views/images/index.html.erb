<% if ! @images.empty? %>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), images_path, :class => "nav-link active" %>
  </li>
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to t(:new), new_image_path, :class => "nav-link" %>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <div class="tab-pane active"><br/>
    <table class="table">
      <tbody>
        <% @images.each_slice(3) do |p| %>
        <tr>
          <% p.each do |image| %>
            <td class="list">
              <%= link_to image_tag(image.file.url(:medium), :width => "250"), image_path(image) %>
              <br/><br/>
              <b><%= link_to image.title, image_path(image) %></b>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% else %>
    <h3>Nenhum Registro Encontrado. <%= link_to 'Cadastrar?', new_image_path %></h3>
<% end %>
